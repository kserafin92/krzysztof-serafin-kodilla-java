SELECT I.*, IL.NAME AS LIST_NAME
FROM ISSUES I,  ISSUESLISTS IL
WHERE I.ISSUESLIST_ID = IL.ID;

SELECT I.*, U.LASTNAME ASSIGNED_USER
FROM ISSUES I, USERS U
WHERE I.USER_ID_ASSIGNEDTO = U.ID;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(I.ID) AS TASK_COUNT
FROM USERS U, ISSUES I
WHERE U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY U.ID;